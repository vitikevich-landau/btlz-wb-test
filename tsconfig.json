{
    "compilerOptions": {
        "strict": true,
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",

        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,

        "allowJs": true,
        "checkJs": true,

        "rootDir": "./src",
        "outDir": "./dist",

        "baseUrl": ".",
        "paths": {
            "#*": ["./src/*"]
        },

        "types": ["node"]
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["node_modules", "src/**/*.test.*", "src/**/*.spec.*"]
}
